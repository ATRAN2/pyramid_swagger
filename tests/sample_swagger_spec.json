{
    "apiVersion": "0.1",
    "swaggerVersion": "1.2",
    "basePath": "/geocoder",
    "apis": [

        {
            "path": "/sample_post",
            "operations": [
                {
                    "method": "POST",
                    "nickname": "sample_post",
                    "type": "object",
                    "parameters": [
                        {
                            "paramType": "body",
                            "name": "content",
                            "type": "body_model",
                            "required": true
                        }
                    ],
                    "summary": "Tests required body parameters"
                }
            ]
        },

        {
            "path": "/geocoder/{api_provider}/forward_unstructured",
            "description": "Forward Unstructured Geocoding",
            "operations": [
                {
                    "method": "GET",
                    "nickname": "forward_unstructured",
                    "type": "provider_response",
                    "parameters": [
                        {
                            "paramType": "path",
                            "name": "api_provider",
                            "description": "The external provider you wish to use",
                            "type": "string",
                            "enum": ["apple", "bing", "google_v3", "nokia", "static", "tomtom"],
                            "required": true
                        },
                        {
                            "paramType": "query",
                            "name": "query",
                            "description": "Location to query",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "query",
                            "name": "locale",
                            "description": "Locale to use for localization",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "query",
                            "name": "bounds",
                            "description": "Bounding box for hinting",
                            "type": "string",
                            "required": false
                        },
                        {
                            "paramType": "query",
                            "name": "from_country",
                            "description": "ISO 3166-1 alpha-2 country to bias by",
                            "type": "string",
                            "required": false
                        },
                        {
                            "paramType": "query",
                            "name": "ignore_cache",
                            "description": "Bypass the geocoder cache (true/false)",
                            "type": "string",
                            "required": false
                        }
                    ],
                    "summary": "Geocode an unstructured string"
                }
            ]
        }

    ],
    "models": {
	"body_model": {
            "id": "body_model",
            "type": "object",
            "required": [ "foo" ],
	    "additionalProperties": false,
            "properties": {
                "foo": { "type": "string" },
                "bar": { "type": "string" }
            }
        },
        "provider_response": {
            "id": "provider_response",
            "description": "Results of a geocoder query(unstructured, structured or reverse) from a provider",
            "type": "object",
            "required": [ "raw_response", "logging_info" ],
	    "additionalProperties": false,
            "properties": {
                "raw_response": {
                    "type": "string"
                },
                "logging_info": {
                    "type": "object"
                }
            }
        }
    }
}
